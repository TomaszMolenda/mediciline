<!-- 	<task:scheduled ref="processing" method="process" fixed-delay="86400000"/> -->
<!--   </task:scheduled-tasks> -->


	  <bean id="jsonViewSupport" class="com.monitorjbl.json.JsonViewSupportFactoryBean"/>
	
	
</beans>
